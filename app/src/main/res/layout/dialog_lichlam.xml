<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lịch làm vừa tạo"
        android:gravity="center"
        android:textSize="16sp"
        android:background="#73AB6B"
        android:layout_margin="5dp"
        ></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="9dp"
            android:text="Name"
            android:textSize="18sp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginTop="9dp"
            android:text="In"
            android:textSize="18sp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="Out"
            android:textSize="18sp"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#80CAC3C3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtnv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="10dp"
                android:text="Faius Mojumder Nahin"
                android:textColor="#D1000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtcalam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="ca"
                android:textColor="#80000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtngaylam"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="6dp"
                android:text="ngaylam"
                android:textColor="#80000000"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="6dp"
            android:background="#80CAC3C3" />

        <TextView
            android:id="@+id/txtgiovao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_weight="1"
            android:text="09:55"
            android:textColor="#D12C2C2C"
            android:textSize="14sp" />

        <View
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="19dp"
            android:background="#80CAC3C3" />

        <TextView
            android:id="@+id/txtgiora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_weight="1"

            android:text="13:55"
            android:textColor="#D12C2C2C"
            android:textSize="14sp" />



    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#80CAC3C3"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        >

        <Button
            android:id="@+id/btnthemcuoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#73AB6B"
            android:text="Thêm"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/btnhuycuoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#547550"
            android:text="Hủy"
            android:textColor="@color/white" />

    </LinearLayout>


</LinearLayout>